  {
    name: 'C',
    logoUrl: 'https://img.shields.io/badge/Java-5%2B-brightgreen'
  },
  {
    name: 'Spring',
    logoUrl: 'https://img.shields.io/badge/Spring-5%2B-yellowgreen'
  },
  {
    name: 'HTML5',
    logoUrl: 'https://img.shields.io/badge/HTML5-6%2B-red'
  },
  {
